@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeliverySchedule</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            overflow-x: hidden;
        }

        /* 固定頂部 navbar */
        #navbar-top {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            background-color: #e3f2fd; /* 淺藍色 */
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        #wrapper {
            display: flex;
            width: 100%;
            margin-top: 56px; /* 預留 navbar 高度 */
        }

        /* Sidebar */
        #sidebar-wrapper {
            width: 250px;
            background: #f8f9fa;
            transition: margin 0.3s ease;
            height: calc(100vh - 56px); /* 扣掉 navbar 高度 */
            overflow-y: auto; /* 滾輪效果 */
            box-shadow: 2px 0 6px rgba(0,0,0,0.1); /* 與內容的分界陰影 */
        }

            #sidebar-wrapper.collapsed {
                margin-left: -250px;
            }

        /* Page content */
        #page-content-wrapper {
            flex-grow: 1;
            padding: 20px;
        }

        /* Sidebar 選單 */
        .sidebar .nav-link {
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: #000; /* 預設黑色 */
        }

            .sidebar .nav-link span {
                display: flex;
                align-items: center;
                color: inherit;
            }

            .sidebar .nav-link i,
            .sidebar .nav-link .arrow {
                color: #000;
                margin-right: 8px;
            }

        /* 箭頭旋轉 */
        .arrow {
            transition: transform 0.2s ease, color 0.2s ease;
        }

        .nav-link[aria-expanded="true"] .arrow {
            transform: rotate(90deg);
        }

        /* hover/active 效果 */
        .sidebar .nav-link:hover,
        .sidebar .nav-link:focus,
        .sidebar .nav-link.active {
            color: #0d6efd;
        }

            .sidebar .nav-link:hover i,
            .sidebar .nav-link:focus i,
            .sidebar .nav-link.active i,
            .sidebar .nav-link:hover .arrow,
            .sidebar .nav-link:focus .arrow,
            .sidebar .nav-link.active .arrow {
                color: #0d6efd;
            }

        /* Menu Toggle 按鈕 */
        #menu-toggle {
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <!-- 固定頂部 navbar -->
    <nav id="navbar-top" class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <button class="btn" id="menu-toggle">☰</button>
            <span class="ms-auto">帳號：User</span>
        </div>
    </nav>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="sidebar">
            <div class="sidebar-heading text-center py-3">
                <h5>功能選單</h5>
            </div>
            <ul class="nav flex-column" id="menuContainer">
                <!-- 動態選單 -->
            </ul>
        </div>

        <!-- Page content -->
        <div id="page-content-wrapper">
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const sidebar = document.getElementById("sidebar-wrapper");
            const toggleBtn = document.getElementById("menu-toggle");
            const navbar = document.getElementById("navbar-top");

            // 自動套用 navbar 背景色
            const navbarBg = window.getComputedStyle(navbar).backgroundColor;
            toggleBtn.style.backgroundColor = navbarBg;

            // 判斷字體顏色（亮色底用黑字，暗色底用白字）
            const rgb = navbarBg.match(/\d+/g);
            if (rgb) {
                const r = parseInt(rgb[0]);
                const g = parseInt(rgb[1]);
                const b = parseInt(rgb[2]);
                const brightness = (r*299 + g*587 + b*114)/1000;
                toggleBtn.style.color = brightness > 128 ? "black" : "white";
            }

            toggleBtn.addEventListener("click", function() {
                sidebar.classList.toggle("collapsed");
            });

            // 載入 Menu
            fetch("/api/Menus")
                .then(resp => {
                    if (!resp.ok) throw new Error("Failed to fetch menus");
                    return resp.json();
                })
                .then(menus => {
                    function renderMenus(items) {
                        let html = "";
                        items.forEach(item => {
                            if (item.children && item.children.length > 0) {
                                html += `
                                    <li class="nav-item">
                                        <a class="nav-link collapsed"
                                           data-bs-toggle="collapse"
                                           href="#collapse-${item.id}"
                                           role="button"
                                           aria-expanded="false"
                                           aria-controls="collapse-${item.id}">
                                            <span><i class="bi ${item.icon}"></i>${item.title}</span>
                                            <i class="bi bi-chevron-right arrow"></i>
                                        </a>
                                        <ul class="collapse list-unstyled ps-3" id="collapse-${item.id}">
                                            ${renderMenus(item.children)}
                                        </ul>
                                    </li>
                                `;
                            } else {
                                html += `
                                    <li class="nav-item">
                                        <a class="nav-link" href="${item.url}">
                                            <span><i class="bi ${item.icon}"></i>${item.title}</span>
                                        </a>
                                    </li>
                                `;
                            }
                        });
                        return html;
                    }

                    document.getElementById("menuContainer").innerHTML = renderMenus(menus);
                })
                .catch(err => {
                    console.error("載入選單失敗:", err);
                    document.getElementById("menuContainer").innerHTML = `<li class="nav-item"><span class="text-danger">載入選單失敗</span></li>`;
                });
        });
    </script>
</body>
</html>
